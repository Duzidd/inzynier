<Window x:Class="inzynier.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Window" Height="400" Width="400">
    <Grid Margin="0,0,0,-35">
        <!-- Dodaj kontrolki do edycji wartości -->
        <StackPanel Margin="10">
            <Label Content="Id:"/>
            <TextBox x:Name="textBoxId" IsReadOnly="True" />

            <Label Content="Nazwa:"/>
            <TextBox x:Name="textBoxName"/>

            <Label Content="Lokalizacja:"/>
            <TextBox x:Name="textBoxLocation" IsReadOnly="True"/>

            <Label Content="Wysokość:"/>
            <TextBox x:Name="textBoxHight"/>

            <Label Content="Szerokość:"/>
            <TextBox x:Name="textBoxWidth"/>

            <!-- Dodaj kontrolkę dla ilości -->
            <Label Content="Ilość:"/>
            <TextBox x:Name="textBoxQty" IsReadOnly="True"/>

            <Button Content="Zapisz" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
