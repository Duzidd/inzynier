<Window x:Class="inzynier.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Window" Height="300" Width="400">
    <Grid>
        <!-- Dodaj kontrolki do edycji wartości -->
        <StackPanel Margin="10">
            <Label Content="Pole 1:"/>
            <TextBox x:Name="textBoxValue1"/>

            <Label Content="Pole 2:"/>
            <TextBox x:Name="textBoxValue2"/>

            <Button Content="Zapisz" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
