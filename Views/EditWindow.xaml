<Window x:Class="inzynier.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Window" Height="300" Width="400">
    <Grid>
        <!-- Dodaj kontrolki do edycji wartości -->
        <StackPanel Margin="10">
            <Label Content="Id:"/>
            <TextBox x:Name="textBoxId"/>

            <Label Content="Name:"/>
            <TextBox x:Name="textBoxName"/>

            <Label Content="Location:"/>
            <TextBox x:Name="textBoxLocation"/>

            <Label Content="Hight:"/>
            <TextBox x:Name="textBoxHight"/>

            <Label Content="Width:"/>
            <TextBox x:Name="textBoxWidth"/>

            <Button Content="Zapisz" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
